<?xml version="1.0" encoding="utf-8" ?>
<basePage:ParameterizedBasePage 
             x:TypeArguments="accountCredential:AccountViewModel,accountCredential:AccountPageParameters" 
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:accountCredential="clr-namespace:CheckIt.Core.Components.AccountCredential;assembly=CheckIt.Core"
             xmlns:basePage="clr-namespace:CheckIt.Core.Utils.BasePage;assembly=CheckIt.Core"
             x:Class="CheckIt.Core.Components.AccountCredential.AccountCredential">
    <ContentPage.Content>
        <StackLayout>

            <Label FontSize="Large" Text="{Binding SuggestedEmail, StringFormat='Suggested email: {0}'}"/>

            <Entry Text="{Binding Email}" Placeholder="Email"/>
            <Entry Text="{Binding Password}" Placeholder="Password" IsPassword="True"/>

            <Button Text="Add user" Command="{Binding AddUser}"/>

        </StackLayout>
    </ContentPage.Content>
</basePage:ParameterizedBasePage>